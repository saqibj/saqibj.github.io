layout: default
title: Admin Panel
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <meta name="description" content="SaqibJ's personal website and portfolio" />
  <meta name="author" content="SaqibJ" />
  <title>SJLabs</title>
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  <link rel="stylesheet" href="{{ '/static/css/admin.css' | relative_url }}">
</head>
<body>
  <div class="hero">
    <img src="{{ '/static/images/profile-image.jpg' | relative_url }}" alt="SaqibJ Profile - Developer & Creator" loading="lazy">
    <div class="hero-content">
      <h1>Welcome to SaqibJ's Lab</h1>
      <p>Developer & Creator</p>
      <a href="#about" aria-label="Learn more about SaqibJ">Learn More</a>
    </div>
  </div>
  
  <div class="admin-panel" aria-label="Content Management System">
    <script>
      CMS.init({
        config: {
          backend: {
            name: 'github',
            repo: 'saqibj/saqibj.github.io',
            branch: 'main',
            base_url: 'https://github.com',
            site_domain: 'saqibj.github.io',
            auth_endpoint: 'https://github.com/login/oauth/authorize',
            auth_scope: 'repo'
          },
          media_folder: "static/images/uploads",
          public_folder: "/images/uploads",
          collections: [
            {
              name: "blog",
              label: "Blog Posts",
              folder: "_posts/blog",
              create: true,
              slug: "{{year}}-{{month}}-{{day}}-{{slug}}",
              fields: [
                { name: "title", label: "Title", widget: "string", required: true },
                { name: "date", label: "Date", widget: "datetime", format: "YYYY-MM-DD" },
                { name: "tags", label: "Tags", widget: "list", required: false },
                { name: "body", label: "Content", widget: "markdown" }
              ]
            },
            {
              name: "projects",
              label: "Projects",
              folder: "_data/projects",
              create: true,
              fields: [
                { name: "name", label: "Project Name", widget: "string" },
                { name: "description", label: "Description", widget: "text" },
                { name: "url", label: "Project URL", widget: "string" },
                { name: "tech", label: "Technologies", widget: "list" }
              ]
            },
            {
              name: "pages",
              label: "Pages",
              files: [
                {
                  label: "About",
                  name: "about",
                  file: "about.md",
                  fields: [
                    { name: "title", label: "Title", widget: "string" },
                    { name: "body", label: "Content", widget: "markdown" }
                  ]
                }
              ]
            }
          ]
        }
      });
    </script>
  </div>
</body>
</html>